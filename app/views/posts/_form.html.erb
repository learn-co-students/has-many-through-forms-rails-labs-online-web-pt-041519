<%= form_for post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :content %>
  <%= f.text_area :content %><br>
  <br>
  <%= f.label :category_ids, 'Categories' %><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br><br>
  Create a new category:<br>
  <%= f.fields_for :categories, post.categories.build do |c| %>
    <%= c.label :name %>
    <%= c.text_field :name %>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
