<h3><%= post.title %></h3>
<p><%= post.content %> <p>
<div>
    <%post.categories.each do |cat| %>
    <%= cat.name %>
    <% end %>
</div>
<div> 
    <% post.comments.each do |com| %>
        <%= com.content %>
    <%end %>
</div>

<div> 
    <% post.users.uniq.each do |user| %>
    <li>
        <%= link_to user.username, user_path(user) %>
    </li>
</div>
<% end %>